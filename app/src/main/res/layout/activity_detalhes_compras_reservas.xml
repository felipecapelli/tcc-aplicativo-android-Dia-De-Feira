<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/activity_detalhes_compras_reservas_id_compra_reserva"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="id_compra_reserva"
        android:visibility="gone"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/activity_detalhes_compras_reservas_titulo_cliente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="8dp"
            android:text="Cliente"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/activity_detalhes_compras_reservas_botao_vender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vender a reserva"
            android:visibility="gone" />

    </LinearLayout>
    <TextView
        android:id="@+id/activity_detalhes_compras_reservas_email_cliente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="email_cliente"
        android:visibility="gone"/>

    <EditText
        android:id="@+id/activity_detalhes_compras_reservas_campo_nome_cliente"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:text="Nome_cliente" />

    <TextView
        android:id="@+id/activity_detalhes_compras_reservas_titulo_Produtor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingTop="8dp"
        android:text="Produtor"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/activity_detalhes_compras_reservas_email_produtor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="email_produtor"
        android:visibility="gone"/>

    <EditText
        android:id="@+id/activity_detalhes_compras_reservas_campo_nome_produtor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:text="Nome_produtor" />

    <TextView
        android:id="@+id/activity_detalhes_compras_reservas_titulo_feira"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingTop="8dp"
        android:text="Feira"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/activity_detalhes_compras_reservas_id_feira"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="id_feira"
        android:visibility="gone"/>

    <EditText
        android:id="@+id/activity_detalhes_compras_reservas_campo_nome_feira"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:text="Nome_feira" />

    <EditText
        android:id="@+id/activity_detalhes_compras_reservas_campo_endereco_feira"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:text="endereco_feira" />

    <EditText
        android:id="@+id/activity_detalhes_compras_reservas_campo_data_feira"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:text="data_feira" />

    <TextView
        android:id="@+id/activity_detalhes_compras_reservas_titulo_data_reserva"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingTop="8dp"
        android:text="Data da Reserva"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/activity_detalhes_compras_reservas_data_reserva"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:text="data_reserva" />

    <TextView
        android:id="@+id/activity_detalhes_compras_reservas_titulo_data_venda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingTop="8dp"
        android:text="Data da Venda"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/activity_detalhes_compras_reservas_data_venda"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:text="data_venda" />

    <TextView
        android:id="@+id/activity_detalhes_compras_reservas_titulo_lista_produtos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Produtos escolhidos"
        android:textStyle="bold"/>

    <ListView
        android:id="@+id/activity_detalhes_compras_reservas_lista_produtos"
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:layout_weight="1"/>
</LinearLayout>
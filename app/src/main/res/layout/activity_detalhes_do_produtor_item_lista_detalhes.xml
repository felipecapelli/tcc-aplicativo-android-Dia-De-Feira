<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_lista_detalhes_do_produtor_id_produto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:text="id_produto:" />

        <TextView
            android:id="@+id/item_lista_detalhes_do_produtor_titulo_produto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="10dp"
            android:text="Produto:" />

        <TextView
            android:id="@+id/item_lista_detalhes_do_produtor_nome_produto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="nome_produto" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_lista_detalhes_do_produtor_titulo_organico"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="10dp"
            android:text="Orgânico?" />

        <TextView
            android:id="@+id/item_lista_detalhes_do_produtor_boolean_organico"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="produto_organico" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_lista_detalhes_do_produtor_titulo_preco"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="10dp"
            android:text="Preço: " />

        <TextView
            android:id="@+id/item_lista_detalhes_do_produtor_preco"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="10dp"
            android:text="$$,$$" />

        <TextView
            android:id="@+id/item_lista_detalhes_do_produtor_unidade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Unidade de medida" />
    </LinearLayout>

</LinearLayout>
